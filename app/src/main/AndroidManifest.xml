<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="site.imcu.lcus">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".theme.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/lcus"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/lcus"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="聊大课表">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/login_action" />
        <activity
            android:name=".activity.AddActivity"
            android:label="@string/add_course" />
        <activity
            android:name=".activity.EditActivity"
            android:label="@string/edit_course" />
        <activity android:name=".activity.AboutActivity" />
        <activity
            android:name=".activity.ScoreActivity"
            android:label="@string/score_read" />
        <activity
            android:name=".activity.LeadActivity"
            android:label="@string/course_lead" />
        <activity
            android:name=".score.Score_This_Activity"
            android:label="@string/score_this" />
        <activity
            android:name=".score.Score_Fail_Activity"
            android:label="@string/score_fail" />
        <activity
            android:name=".score.Score_All_Activity"
            android:label="@string/score_all" />
        <activity android:name=".score.Score_Detail_Activity"/>
    </application>

</manifest>