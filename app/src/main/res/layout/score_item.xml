<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_score_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_margin_vertical_big_activity"
    android:layout_marginEnd="@dimen/card_margin_horizontal_big_activity"
    android:layout_marginStart="@dimen/card_margin_horizontal_big_activity"
    android:layout_marginTop="@dimen/card_margin_vertical_big_activity"
    android:background="@color/white"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
    card_view:cardElevation="@dimen/card_recycler_elevation">

    <com.bilibili.magicasakura.widgets.TintLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4"
        android:orientation="horizontal">
        <com.bilibili.magicasakura.widgets.TintTextView
            android:id="@+id/item_mark"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/theme_color_primary" />
        <com.bilibili.magicasakura.widgets.TintLinearLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <com.bilibili.magicasakura.widgets.TintLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.bilibili.magicasakura.widgets.TintTextView
                    android:id="@+id/item_name"
                    android:textStyle="bold"
                    android:textColor="@color/theme_color_primary_trans"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.bilibili.magicasakura.widgets.TintLinearLayout>

            <com.bilibili.magicasakura.widgets.TintLinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.bilibili.magicasakura.widgets.TintTextView
                    android:text="@string/course_attr"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.bilibili.magicasakura.widgets.TintTextView
                    android:id="@+id/item_attr"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </com.bilibili.magicasakura.widgets.TintLinearLayout>

            <com.bilibili.magicasakura.widgets.TintLinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.bilibili.magicasakura.widgets.TintTextView
                    android:text="@string/course_credit"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.bilibili.magicasakura.widgets.TintTextView
                    android:id="@+id/item_credit"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </com.bilibili.magicasakura.widgets.TintLinearLayout>

            <com.bilibili.magicasakura.widgets.TintLinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.bilibili.magicasakura.widgets.TintTextView
                    android:text="@string/course_position"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.bilibili.magicasakura.widgets.TintTextView
                    android:id="@+id/item_position"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </com.bilibili.magicasakura.widgets.TintLinearLayout>

        </com.bilibili.magicasakura.widgets.TintLinearLayout>

    </com.bilibili.magicasakura.widgets.TintLinearLayout>
</android.support.v7.widget.CardView>