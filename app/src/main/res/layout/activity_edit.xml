<com.bilibili.magicasakura.widgets.TintLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="site.imcu.lcus.LoginActivity">
    <include layout="@layout/toolbar"/>
    <com.bilibili.magicasakura.widgets.TintLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <com.bilibili.magicasakura.widgets.TintLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.bilibili.magicasakura.widgets.TintEditText
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/add_name"
                android:inputType="text"
                android:background="@drawable/ic_edit_text_default"
                android:drawableLeft="@drawable/ic_person_outline_white_24dp"
                android:drawablePadding="@dimen/padding_half"
                android:maxLines="1"
                android:padding="@dimen/padding_half"
                android:textCursorDrawable="@drawable/edittext_cursor"
                android:textSize="13sp"
                app:backgroundTint="@color/selector_focus"
                app:drawableLeftTint="@color/selector_focus" />
            <com.bilibili.magicasakura.widgets.TintEditText
                android:id="@+id/edit_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/add_location"
                android:inputType="text"
                android:maxLength="20"
                android:maxLines="1"
                android:background="@drawable/ic_edit_text_default"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:drawablePadding="@dimen/padding_half"
                android:padding="@dimen/padding_half"
                android:textCursorDrawable="@drawable/edittext_cursor"
                android:textSize="13sp"
                app:backgroundTint="@color/selector_focus"
                app:drawableLeftTint="@color/selector_focus"/>

            <com.bilibili.magicasakura.widgets.TintEditText
                android:id="@+id/edit_span"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edit_span"
                android:inputType="text"
                android:maxLength="20"
                android:maxLines="1"
                android:background="@drawable/ic_edit_text_default"
                android:drawableLeft="@drawable/ic_lock_white_24dp"
                android:drawablePadding="@dimen/padding_half"
                android:padding="@dimen/padding_half"
                android:textCursorDrawable="@drawable/edittext_cursor"
                android:textSize="13sp"
                app:backgroundTint="@color/selector_focus"
                app:drawableLeftTint="@color/selector_focus"/>

        </com.bilibili.magicasakura.widgets.TintLinearLayout>
    </com.bilibili.magicasakura.widgets.TintLinearLayout>

</com.bilibili.magicasakura.widgets.TintLinearLayout>